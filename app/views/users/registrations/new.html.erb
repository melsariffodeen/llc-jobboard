<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
      <%= f.label :email, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10"><%= f.email_field :email, :class => 'form-control', :autofocus => true %></div>
  </div>

  <div class="form-group">
      <%= f.label :password, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10"><%= f.password_field :password, :class => 'form-control' %></div>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation, :class => 'control-label col-sm-2' %>
      <div class="col-sm-10"><%= f.password_field :password_confirmation, :class => 'form-control' %></div>
  </div>

  <div class="form-group">
      <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      <%= render "users/shared/links" %>
  </div>
<% end %>
